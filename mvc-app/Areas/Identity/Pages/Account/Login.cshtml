@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 420px; background-color: #1f1f1f; border-radius: 12px;">
        <h2 class="text-center text-light mb-3">Iniciar sesión</h2>
        <hr class="mb-4" style="border-color: #333;" />

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email" class="form-label text-light">Email</label>
                <input asp-for="Input.Email" class="form-control bg-dark text-light border-secondary" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label text-light">Contraseña</label>
                <input asp-for="Input.Password" class="form-control bg-dark text-light border-secondary" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label text-light">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-info w-100">Iniciar sesión</button>

            <div class="mt-3 text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-info">¿Olvidaste tu contraseña?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-info">Registrarse como nuevo usuario</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-info">Reenviar confirmación de email</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
